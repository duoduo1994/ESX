<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/my_qingtie"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/myallorder" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:text="我的请帖"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_xishitang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/wodexst" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的喜事堂"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/xishitangtiao"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cookschedule"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/cookimage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/cookschedule" />

        <TextView
            android:id="@+id/cooktext"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我是厨师"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/cooktiao"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/carimage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/myvouchers" />

        <TextView
            android:id="@+id/cartext"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="收货地址"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/cartiao"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_coupon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/mywallet" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的优惠券"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_package"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
         >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/myallevaluate" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的包裹"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_collect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
         >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/mycollection" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的收藏"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_cooperation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
         >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/mycooperation" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我要合作"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_identification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/about1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="实名认证"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@mipmap/about1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="联系客服"
            android:textColor="#696969"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@mipmap/tiaozhuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kongbai_bufen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.29"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>