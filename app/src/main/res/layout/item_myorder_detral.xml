<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/iv_item_scar"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="55dp"
        android:layout_height="55dp" />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_goods_name_order"
                android:textSize="10sp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="goods_name"
                android:textColor="@color/black"
                />
            <TextView
                android:textSize="10sp"
                android:id="@+id/tv_goods_price_order"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="goods price"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/ll_pei"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_pei_name_order"
                android:textSize="16sp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="goods_name"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_pei_price_order"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="goods price"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_hint_order"
                android:textSize="12sp"
                android:text="此商品需要提前3天预定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_red"
                />
            <TextView
                android:layout_marginRight="6dp"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_count_order"
                android:text="*1"
                />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        />
</LinearLayout>