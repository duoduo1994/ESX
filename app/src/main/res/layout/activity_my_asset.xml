<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_asset"
    android:background="@color/LightGray"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.activity.MyAssetActivity">
<include layout="@layout/item_tou"/>
    <LinearLayout
        android:id="@+id/ll_my_asset"
        android:orientation="vertical"
        android:background="@color/title_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额账户（元）"
            />
        <TextView
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8899.99"
            android:textColor="@color/white"
            android:textSize="44sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_chongzhi"
        android:background="@color/white"
        android:layout_marginTop="4dp"
        android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_cz"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/ic_launcher"
        />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tiaozhuan"
        />

    <TextView
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_cz"
        android:layout_toEndOf="@+id/iv_cz"
        android:layout_marginStart="14dp" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tixian"
        android:background="@color/white"
       android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_tx"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tiaozhuan"
            />

        <TextView
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_tx"
            android:layout_toEndOf="@+id/iv_tx"
            android:layout_marginStart="14dp" />
    </RelativeLayout>
</LinearLayout>
