<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addaddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightGray"
    tools:context="com.example.administrator.activity.AddaddressActivity">
    <include layout="@layout/item_tou"
        android:id="@+id/inl"
        />
<LinearLayout
android:layout_below="@+id/inl"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="收货人"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_address_receiver"
            android:layout_weight="3"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="联系电话"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:id="@+id/et_address_phone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="所在地区"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_address_area"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_address_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:textSize="12sp"
                android:id="@+id/tv_choose_plase"
                android:layout_toLeftOf="@+id/iv_choose_area"
                android:layout_toStartOf="@+id/iv_choose_area" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:id="@+id/iv_choose_area"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/tiaozhuan"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_address_street"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="街道"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:id="@+id/iv_choose_street"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/tiaozhuan"
                />

            <TextView
                android:id="@+id/tv_address_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="潘火街道"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_alignBaseline="@+id/tv_address_street"
                android:layout_alignBottom="@+id/tv_address_street"
                android:layout_toLeftOf="@+id/iv_choose_street"
                android:layout_toStartOf="@+id/iv_choose_street" />
        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_detail_address"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="14sp"
        android:hint="请填写详细信息，不少于5个字。"
        />

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/Grey"
    />
    <RelativeLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="设为默认地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/swith_setdefault"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
    <Button
        android:id="@+id/btn_save_address"
        android:layout_alignParentBottom="true"
        android:background="@color/title_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        />
</RelativeLayout>
