
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CanJu_Activity" >

    <include
        layout="@layout/item_tou"
        android:id="@+id/g_eng_d_uo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" />
<LinearLayout
    android:background="#fff"
    android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:orientation="horizontal" >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/star1"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/star1"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/star1"
        />
    <ImageView 
        android:visibility="gone"
        android:id="@+id/iv_star_level4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/star1"
        />
    <ImageView 
        android:visibility="gone"
        android:id="@+id/iv_star_level5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/star1"
        />
    
    
</LinearLayout>
       
<LinearLayout 
      android:layout_width="match_parent"
        android:layout_height="0dp"
    android:layout_weight="0.92"
    android:orientation="vertical"
    >
    

  

        <ListView
            android:id="@+id/lv_canju_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.82" />
<TextView 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#f00"
    	android:gravity="center"
    	android:textSize="10sp"
    	android:text="注：10公里内免费配送"
    	
    />
<TextView 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#f00"
    	android:gravity="center"
    	android:textSize="10sp"
    	android:text="10公里以上另行收费，图片仅供参考"
    />
<LinearLayout 
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    >
<TextView 
    android:id="@+id/tv_canju_price"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textSize="16sp"
    	android:text="800 "
    	android:textColor="#833"
    />
<TextView 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textSize="16sp"
    	android:text=" 元/桌"
    />
</LinearLayout>

      </LinearLayout>

