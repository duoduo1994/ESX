<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="6dp"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:id="@+id/iv_taocan_pic"
        android:src="@mipmap/nuli"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_taocan_pic"
        android:layout_alignTop="@+id/iv_taocan_pic"
        android:layout_alignBottom="@+id/iv_taocan_pic"
        >
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
             android:src="@mipmap/recommend_taocan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:text="套餐A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_taocan_name"
                />
            <TextView
                android:layout_gravity="center"
                android:text="￥688元"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_taocan_price"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/rb_taocan_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />
            <TextView
                android:layout_gravity="center"
                android:text="套餐A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_taocan_num"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <ImageView
            android:src="@mipmap/content_taocan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:singleLine="true"
            android:layout_gravity="center"
            android:text="啦啦啦啦啦啦阿拉啦啦啦啦啦了"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_taocan_content"
            />
    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tiaozhuan"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_below="@+id/iv_taocan_pic"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGray"
        />
</RelativeLayout>